# Production Environment Configuration for Docker
# Copy this to .env.production and fill in your values

# ===================================
# Solana Configuration
# ===================================
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
X402_NETWORK=solana-devnet
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# ===================================
# Supabase Configuration
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ===================================
# Gradient Cloud API (Primary for Linux deployments)
# ===================================
# Default test key provided - works out of the box!
GRADIENT_API_KEY=ak-f5a93640ff449cd3d44457a5be3172d212355e56fdc0709f0bd5d1a042bc0d89
GRADIENT_MODEL=openai/gpt-oss-120b
GRADIENT_BASE_URL=https://apis.gradient.network/api/v1

# ===================================
# Application Configuration
# ===================================
NEXT_PUBLIC_BASE_URL=https://parallaxpay.online
NEXT_PUBLIC_APP_URL=https://parallaxpay.online
NEXT_PUBLIC_DEV_MODE=false
ENABLE_TX_LOGGING=true

# ===================================
# Parallax Configuration (Optional - not needed on Linux)
# ===================================
# These are optional since Parallax requires macOS
# System will automatically use Gradient Cloud API on Linux
PARALLAX_SCHEDULER_URL=http://localhost:3001
PARALLAX_LOAD_BALANCING=latency-based
CLUSTER_MAX_RETRIES=3

# ===================================
# x402 Configuration
# ===================================
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com
NEXT_PUBLIC_X402_GATEWAY_URL=your_gateway_url_if_needed
