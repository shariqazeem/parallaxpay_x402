# ===================================
# ParallaxPay x402 - Environment Configuration
# ===================================

# ===================================
# Solana Configuration
# ===================================
# Solana RPC endpoint (use devnet for testing, mainnet-beta for production)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Solana network (devnet, testnet, or mainnet-beta)
X402_NETWORK=solana-devnet

# Private key for autonomous x402 payments (Base58 format)
# IMPORTANT: Keep this secret! Never commit to git
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# ===================================
# Supabase Configuration
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ===================================
# Parallax Configuration (Primary LLM Provider)
# ===================================
# Single Parallax scheduler URL (for single-node setup)
PARALLAX_SCHEDULER_URL=http://localhost:3001

# OR: Multiple Parallax nodes for cluster (comma-separated)
# PARALLAX_CLUSTER_URLS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# Load balancing strategy: 'latency-based', 'round-robin', or 'random'
PARALLAX_LOAD_BALANCING=latency-based

# Maximum retries for failed inference requests
CLUSTER_MAX_RETRIES=3

# Provider discovery polling interval (milliseconds)
PROVIDER_DISCOVERY_INTERVAL=30000

# ===================================
# Gradient Cloud API (Fallback LLM Provider)
# ===================================
# Gradient API key - get one at https://cloud.gradient.network
# This is used as fallback when Parallax is not available (e.g., on Linux deployments)
GRADIENT_API_KEY=ak-f5a93640ff449cd3d44457a5be3172d212355e56fdc0709f0bd5d1a042bc0d89

# Gradient model to use (default: openai/gpt-oss-120b)
GRADIENT_MODEL=openai/gpt-oss-120b

# Gradient API base URL (usually don't need to change this)
GRADIENT_BASE_URL=https://apis.gradient.network/api/v1

# ===================================
# Application Configuration
# ===================================
# Base URL for the application (used for internal API calls)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Development mode (bypasses x402 payments for testing)
NEXT_PUBLIC_DEV_MODE=false

# Enable transaction logging
ENABLE_TX_LOGGING=true

# ===================================
# x402 Payment Configuration
# ===================================
# Facilitator address for x402 payments
X402_FACILITATOR_ADDRESS=your_facilitator_address_here

# Payment amount in lamports (1 SOL = 1,000,000,000 lamports)
X402_PAYMENT_AMOUNT=1000000

# ===================================
# Oracle Configuration
# ===================================
# Pyth Oracle Program ID (for Solana price feeds)
PYTH_PROGRAM_ID=gSbePebfvPy7tRqimPoVecS2UsBvYv46ynrzWocc92s

# ===================================
# Notes
# ===================================
# - For local development with Parallax: Set PARALLAX_SCHEDULER_URL
# - For Linux deployments without Parallax: Set GRADIENT_API_KEY
# - The system will automatically fall back to Gradient when Parallax is unavailable
# - Get Gradient API key: https://cloud.gradient.network
# - For production: Use mainnet-beta and secure your private keys
